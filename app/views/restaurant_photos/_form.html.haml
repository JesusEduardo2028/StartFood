= simple_form_for(@restaurant_photo,
        :url=>restaurant_photos_path(:restaurant=>@restaurant.name),
        :html=>{:multipart=>true},
        :remote=>true,
        :format => 'js',
        :id=>"new_restaurant_photo") do |g|

  .container-fluid
    .alert-container{id: "alerta-error"}
      .empty-alert{id:"empty-alert"}
        -if flash[:notice]
          .alert-success.text-center
            =flash[:notice]



    = g.file_field :image, multiple: true , name: "restaurant_photo[image]"
    %br
    = g.button :submit, "ok",:class=>"btn btn-info pull-right full"
