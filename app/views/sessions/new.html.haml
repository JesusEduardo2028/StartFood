.container-fluid
  .body-list
    .row
      .col-md-6

        .restaurants

          .container-fluid.margen
            %h1.text-center Iniciar Sesion
            %hr
            .form-session.text-center


              = form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => {:class => 'form'}) do |f|

                .form-group
                  .row
                    .col-md-4
                      =f.label :email

                    .col-md-8
                      = f.email_field :email, :autofocus => true ,:class=> "form-control"
                .form-group
                  .row
                    .col-md-4
                      =f.label :password
                    .col-md-8
                      = f.password_field :password ,:class=> "form-control"

                %row
                  .col-md-3
                    = f.submit "Sign in", :class=> "btn btn-info "
                  .col-md-9
                    - if devise_mapping.rememberable?
                      = f.check_box :remember_me
                      = f.label "Remember me", class: "text-small"

      .col-md-6
        .jumbotron.text-center
          %h4 No estas registrado en Kiwii, Que esperas?

          %a{"data-toggle"=>"modal","data-target"=>"#sign_up", id:"btn-register"}
            %btn.btn.btn-success.btn-registro Crear una cuenta
          .img-thumbnail
            %a{href:"#"}
              %img.img-responsive{src: "http://placehold.it/300x200"}
              %h4 Mas informacion

%div.modal.fade{id: "sign_up" , tabIndex: "-1", role: "dialog" , "aria-labelledby" => "myModalLabel",  "aria-hidden" => "true"}
