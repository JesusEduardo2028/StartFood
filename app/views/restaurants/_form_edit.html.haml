.center-info
  .p.h3 Datos de Restaurante
  %hr
  = simple_form_for(@restaurant,:remote=>true) do |f|
    = f.error_notification

    .form-inputs
      =f.label "Informacion:"
      = f.text_area :description,class:"form-control", rows:3
      %br
      %br
      =f.label "Direccion:"
      %br
      =f.text_field :address,class:"form-control", id:"message_area"
      %br
      %br
      =f.label "Telefono:"
      %br
      =f.text_field :phone,class:"form-control", id:"message_area"
    %br
    %br
    .form-actions
      =f.submit "Guardar Cambios", type: "submit", :class=>"btn btn-success btn-medium"

