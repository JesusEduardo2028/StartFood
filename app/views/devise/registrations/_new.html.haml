.form-registration.center
  = form_for(resource, :as => resource_name,
             :url => registration_path(resource_name),
             :html => {:id => "sign_up_user",:class => 'form'},
             :validate => true ,
             :remote => true) do |f|



    .form-group
      =f.label "UserName"
      %br
      =f.text_field :name, :autofocus => true , id: 'name' ,:class=> "form-control"
    .form-group
      = f.label :email
      %br/
      = f.email_field :email , id: 'email',:class=> "form-control"
    .form-group
      = f.label :password
      %br/
      = f.password_field :password , id: 'password',:class=> "form-control"
    .form-group
      = f.label "Ingrese de nuevo el password"
      %br/
      = f.password_field :password_confirmation , id: 'password_confirmation',:class=> "form-control"
    %br
    %div= f.submit "Registrate", class: 'btn btn-success btn-medium full' ,id: 'btn-submit-reg'
