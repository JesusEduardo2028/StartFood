= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => {:class => 'form-inline'}) do |f|
  .form-group
    = f.email_field :email, :autofocus => true ,:class=> "form-control input-sm" , placeholder: "Email"
  .form-group
    = f.password_field :password ,:class=> "form-control input-sm" , placeholder: "Password"
  .btn= f.submit "Sign in", :class=> "btn btn-info"
  %br/
  - if devise_mapping.rememberable?
    .checkbox
    = f.check_box :remember_me
    = f.label :remember_me
